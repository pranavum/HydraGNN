{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "NbTaV",
        "path": {"total": "./dataset/bcc_enthalpy"},
        "format": "VASP",
        "compositional_stratified_splitting": false,
	"rotational_invariance": true,
        "node_features": {
            "name": ["num_of_protons"],
            "dim": [1],
            "column_index": [0]
        },
        "graph_features":{
            "name": [ "formation_enthalpy"],
            "dim": [1],
            "column_index": [0]
        }
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "EGNN",
	    "equivariance": true, 
            "radius": 5.0,
            "max_neighbours": 100000,
	    "edge_features": ["bond_length", "local_x", "local_y", "local_z"],
	    "periodic_boundary_conditions": true,
            "hidden_dim": 200,
            "num_conv_layers": 3,
            "output_heads": {
                "graph":{
                    "num_sharedlayers": 2,
                    "dim_sharedlayers": 200,
                    "num_headlayers": 2,
                    "dim_headlayers": [200,200]
                }
            },
            "task_weights": [1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0, 1, 2],
            "output_names": ["formation_enthalpy"],
            "output_index": [0],
            "output_dim": [1],
            "type": ["graph"]
        },
        "Training": {
            "num_epoch": 40,
            "perc_train": 0.9,
            "loss_function_type": "mae",
            "batch_size": 32,
            "EarlyStopping": true,
            "patience": 20,
            "Checkpoint": true,
            "checkpoint_delay": 0,
            "continue": 0,
	    "startfrom": "NbTaV",
            "Optimizer": {
                "type": "AdamW",
                "learning_rate": 1e-3
            }
        }
    },
    "Visualization": {
        "plot_init_solution": true,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
