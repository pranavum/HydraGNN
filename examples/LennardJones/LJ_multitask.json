{
   "Verbosity": {
      "level": 2
   },
   "Dataset": {
      "name": "LJdataset",
      "path": {
         "total": "./dataset/data"
      },
      "format": "XYZ",
      "rotational_invariance": true,
      "node_features": {
         "name": [
            "atom_type",
            "potential",
            "forces"
         ],
         "dim": [
            1,
            1,
            3
         ],
         "column_index": [
            0,
            4,
            5
         ]
      },
      "graph_features": {
         "name": [
            "total_energy"
         ],
         "dim": [
            1
         ],
         "column_index": [
            0
         ]
      }
   },
   "NeuralNetwork": {
      "Architecture": {
         "periodic_boundary_conditions": true,
         "model_type": "EGNN",
         "equivariance": false,
         "edge_features": [
            "bond_length",
            "polar_angle",
            "azimutal_angle"
         ],
         "max_neighbours": 20,
         "hidden_dim": 139,
         "num_conv_layers": 5,
         "output_heads": {
            "graph": {
               "num_sharedlayers": 2,
               "dim_sharedlayers": 50,
               "num_headlayers": 2,
               "dim_headlayers": [
                  260,
                  93
               ]
            },
            "node": {
               "num_headlayers": 1,
               "dim_headlayers": [
                  177
               ],
               "type": "mlp"
            }
         },
         "task_weights": [
            1,
            1
         ],
         "alpha_values": [
            [
               "constant",
               0.0
            ],
            [
               "constant",
               0.0
            ]
         ],
         "anneal": {
            "start_value": 1.0,
            "rate": 0.2,
            "frequency": 3
         },
         "cold_start": {
            "final_value": 1.0,
            "rate": 1.2,
            "cutoff_epoch": 10
         }
      },
      "Variables_of_interest": {
         "input_node_features": [
            0
         ],
         "output_index": [
            0,
            2
         ],
         "type": [
            "graph",
            "node"
         ],
         "output_dim": [
            1,
            3
         ],
         "output_names": [
            "total_energy",
            "atomic_forces"
         ]
      },
      "Training": {
         "num_epoch": 1,
         "batch_size": 64,
         "continue": 0,
         "EarlyStopping": true,
         "patience": 100,
         "Checkpoint": true,
         "checkpoint_warmup": 100,
         "startfrom": "existing_model",
         "Optimizer": {
            "learning_rate": 0.001
         }
      }
   },
   "Visualization": {
      "plot_init_solution": true,
      "plot_hist_solution": true,
      "create_plots": true
   }
}