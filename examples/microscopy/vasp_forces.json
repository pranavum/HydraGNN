{
    "Verbosity": {
        "level": 2
    },
    "Dataset": {
        "name": "MOS2",
        "path": {"total": "./dataset/undoped_MOS2_structures"},
        "format": "VASP",
        "compositional_stratified_splitting": false,
	    "rotational_invariance": true,
        "node_features": {
            "name": ["atom_number", "cartesian_coordinates", "forces"],
            "dim": [1, 3, 3],
            "column_index": [0, 1, 4]
        }
    },
    "NeuralNetwork": {
        "Architecture": {
            "model_type": "EGNN",
            "equivariance": true,
            "radius": 5.0,
            "max_neighbours": 100000,
            "num_gaussians": 50,
            "envelope_exponent": 5,
            "int_emb_size": 64,
            "basis_emb_size": 8,
            "out_emb_size": 128,
            "num_after_skip": 2,
            "num_before_skip": 1,
            "num_radial": 6,
            "num_spherical": 7,
            "num_filters": 126,
            "edge_features": ["length", "polar_angle", "azimutal_angle"],
	        "periodic_boundary_conditions": true,
            "hidden_dim": 200,
            "num_conv_layers": 3,
            "output_heads": {
                "node": {
                    "num_headlayers": 2,
                    "dim_headlayers": [200,200],
                    "type": "mlp"
                }
            },
            "task_weights": [1.0]
        },
        "Variables_of_interest": {
            "input_node_features": [0, 1, 2, 3],
            "output_names": ["forces"],
            "output_index": [2],
            "output_dim": [3],
            "type": ["node"]
        },
        "Training": {
            "num_epoch": 500,
            "EarlyStopping": true,
            "perc_train": 0.9,
            "loss_function_type": "mae",
            "batch_size": 32,
            "continue": 0,
            "Optimizer": {
                "type": "AdamW",
                "learning_rate": 1e-3
            }
        }
    },
    "Visualization": {
        "plot_init_solution": true,
        "plot_hist_solution": false,
        "create_plots": true
    }
}
